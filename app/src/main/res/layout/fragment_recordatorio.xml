<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Recordatorio">

    <!-- Toolbar -->

    <!-- Nombre Recordatorio -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="Añadir recordatorio"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Nombre recordatorio"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_text"
        android:inputType="text" />

    <!-- Cantidad de días del recordatorio -->
    <TextView
        android:id="@+id/textViewDias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Cantidad de días del recordatorio"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_text"
        android:inputType="number" />

    <!-- Intervalo de horas entre recordatorio -->
    <TextView
        android:id="@+id/textViewIntervalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Intervalo de horas entre recordatorio"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/intervalo"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_text"
        android:inputType="number" />

    <!-- Descripción del recordatorio -->
    <TextView
        android:id="@+id/textViewDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Descripción del recordatorio"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="340dp"
        android:layout_height="81dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_text"
        android:inputType="text" />

    <!-- Seleccione día de inicio -->
    <TextView
        android:id="@+id/textViewFechaInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Seleccione día de inicio"
        android:textSize="16sp" />

    <CalendarView
        android:id="@+id/cal1"
        android:layout_width="wrap_content"
        android:layout_height="296dp"
        android:layout_marginLeft="30dp" />

    <!-- Botón para añadir recordatorio -->
    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/azul1"
        android:text="Añadir Recordatorio"
        android:textColor="@android:color/white" />

</LinearLayout>
